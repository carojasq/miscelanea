<h1> Orden actual</h1>

<table id="ols">
  <thead>
  <tr>
    <th> Producto  </th> 
    <th> Cantidad </th>
    <th> Precio Unitario </th>
    <th> Precio total </th>
    <th colspan="2">  Acciones </th>

  </tr>
</thead>
  <tbody>
  <% @shopping_basket.order_details.each do |p| %>
  <tr>
  <td> <%= p.product.name %> </td> 
  <td> <%= p.quantity %> </td> 
  <td> <%= p.product.price %> </td> 
  <td> <%= p.product.price * p.quantity %> </td> 
  <td><i class="fi-pencil"> <%= link_to "Modificar", edit_order_detail_path(p) %></i> </td>
  <td><i class="fi-trash"> <%= link_to "Eliminar", shopping_basket_order_detail_path(@shopping_basket, p) , method: :delete, data: {confirm: "EstÃ¡ seguro de eliminar este producto del carro de compras?"} %></i> </td> 
    </tr>
  <% end %>
  <tr> <td> </td> </tr>
  <tr>
    <td> <strong> Subtotal <strong> </td> <td> <%= @shopping_basket_subtotal %> </td>
    <td> <strong> IVA <strong> </td> <td> <%= @shopping_basket_taxes %> </td>
    <td colspan="2"> <strong> Total <strong> </td> <td> <%= @shopping_basket_total %> </td>
  </tr>

</tbody>

</table>



<%= link_to "Finalizar orden", checkout_shopping_basket_path(@shopping_basket.id), class: "button", data: {options: "align:right", dropdown: "drop"}  %>

