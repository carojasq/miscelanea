<h1> Orden # <%= @order.id %> </h1>


<table id="ols">
  <thead>
  <tr>
    <th> Producto  </th> 
    <th> Cantidad </th>
    <th> Precio Unitario </th>
    <th> Precio total </th>
    <th colspan="3">  Acciones </th>

  </tr>
</thead>
  <tbody>
  <% @order.order_lines.each do |p| %>
  <tr>
  <td> <%= p.product.name %> </td> 
  <td> <%= p.quantity %> </td> 
  <td> <%= p.product.price %> </td> 
  <td> <%= p.product.price * p.quantity %> </td> 
  <td><i class="fi-eye"><%= link_to "Ver", product_path(p)  %>  </i>  </td>
  <td><i class="fi-pencil"> <%= link_to "Modificar", edit_product_path(p) %></i> </td> 
  <td><i class="fi-trash"> <%= link_to "Desactivar", product_path(p), method: :delete, data: {confirm: "Desea marcar el producto como inactiva?"} %></i> </td> 
    </tr>
  <% end %>
</tbody>

</table>

Estado:
<% if @order.paid %>
Pagado
<% else %>
Sin pagar
<% end %>