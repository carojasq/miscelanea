<%= form_for @provider do |p| %>
  <% if @provider.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@provider.errors.count, "error") %> no fue posible actualizar proovedor </h2>
    <ul>
    <% @provider.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= p.label "Nombre" %><br>
    <%= p.text_field :name %>
  </p>

  <p>
    <%= p.label "Telefono" %><br>
    <%= p.telephone_field :telephone %>
  </p>
 
  <p>
    <%= p.label "Direccion" %><br>
    <%= p.text_area :address %>
  </p>
  <p>
    <%= p.submit %>
  </p>
<% end %>